{
  "compilerOptions": {
    "lib": ["ESNext"], // Removed "DOM" as it's unnecessary for backend APIs
    "target": "ESNext",
    "module": "ESNext",
    "moduleDetection": "force",
    // Removed "jsx" as it's not used in an Express API
    "allowJs": true,
    "moduleResolution": "bundler", // Retained for Bun.js compatibility
    "esModuleInterop": true,
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": false,
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noPropertyAccessFromIndexSignature": false,
    "types": ["express", "node", "bun-types"]
  }
}
